<% layout('layouts/boilerplate')%>

<link rel="stylesheet" href="/stylesheets/main.css" />
<link rel="stylesheet" href="/stylesheets/flickity.css" />

<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@900&display=swap" rel="stylesheet">

<!-- Flickity CSS -->
<link
  rel="stylesheet"
  href="https://unpkg.com/flickity@2/dist/flickity.min.css"
/>

<!-- Flickity JS -->
<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.js"></script>

<section class ="container-1">

    <div class = "box-1-1 card">
      
      <!-- Section left, card information -->

        <div class="card-body">
          <h5 class="show-title mb-0"><%= bird.species %></h5>
          <p class="card-subtitle mt-1 ms-2 text-muted"><%= bird.location %></p>
          <h6 class="card-subtitle mt-1 mb-3 ms-2">
            Submitted by <%= bird.author.username %>
          </h6>
          <p class="card-text ms-2"><%= bird.description %></p>
          <h6 class="card-subtitle mb-2 ms-2 mt-4">Total likes: <%= bird.likeCount %></h6>

        </div>

        <span class = "mb-2">
        <% if (currentUser && bird.author.equals(currentUser._id)) { %>

          <form class="d-inline" action="/birds/<%=bird._id%>/edit" method="PUT">
            <button class="btn btn-info">Edit</button>
          </form>

          <form
            class="d-inline"
            action="/birds/<%=bird._id%>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-danger">Delete</button>
          </form>
          <% } %>

          <% if (currentUser && !bird.likedBy.includes(currentUser._id)) { %>
            <form class="d-inline" action="/birds/<%=bird._id%>/upvotePost" method="POST">
              <button class="btn btn-success">Like</button>
            </form>
            <% } %> <% if (currentUser && bird.likedBy.includes(currentUser._id) ) { %>
            <form class="d-inline" action="/birds/<%=bird._id%>/unupvotePost" method="POST">
              <button class="btn btn-success">Unlike</button>
            </form>
            <% } %>
          </span>

    </div>

    <div class = "box-1-2">

      <!-- Section right, carousel -->

      <% if (bird.images.length > 1) { %>
        <div class="main-carousel" data-flickity='{ "wrapAround": true , "autoPlay": true }'>
          <% bird.images.forEach((img) => { %>
          <div class="carousel-cell">
            <img src="<%= img.carouselImage %>" alt="<%= bird.species %>" />
          </div>
          <% }) %> 
          
          <% } else if (bird.images.length === 1) { %>
          <img
            class="single-image mx-0"
            src="<%= bird.images[0].url %>"
            alt="<%= bird.species %>"
          />

          <% } else { %>
          <img
            class="single-image"
            src="https://res.cloudinary.com/dabgwgfzh/image/upload/v1609232539/BirdsOfNewZealand/lunxjy92s035iti1aurf.jpg"
            alt="<%= bird.species %>"
          />
          <% } %>
        </div>

  </div>

</section>

  <!-- Create a comment -->
  <div class="row align-items-center">
    <div id="map" style="width: 100%; height: 300px"></div>
    <% if (currentUser) {%>
    <div class="px-0 text-center d-lg-block">
      <h2>Leave a Comment</h2>
      <form
        action="/birds/<%=bird._id%>/comments"
        method="POST"
        class="mb-3 validated-form"
        novalidate
      >
        <div class="mb-3">
          <textarea
            class="form-control"
            name="comment[body]"
            id="body"
            cols="30"
            rows="3"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <button class="btn btn-success">Submit</button>
      </form>
      <% } %> <% for(let comment of bird.comments) { %>
      <div class="card mb-3">
        <div class="card-body">
          <h6 class="card-subtitle mb-2">By <%= comment.author.username%></h6>
          <h6>Total likes: <%= comment.likeCount%></h6>
          <p class="card-text"><%= comment.body %></p>
          <% if( currentUser && comment.author.equals(currentUser._id)) {%>
          <form
            action="/birds/<%=bird._id%>/comments/<%=comment._id%>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
          <% } %> <% if (currentUser &&
          !comment.likedBy.includes(currentUser._id)) { %>
          <form
            class="d-inline"
            action="/birds/<%=bird._id%>/comments/<%=comment._id%>/upvoteComment"
            method="POST"
          >
            <button class="btn btn-sm btn-success">Like</button>
          </form>
          <% } %> <% if (currentUser &&
          comment.likedBy.includes(currentUser._id) ) { %>
          <form
            class="d-inline"
            action="/birds/<%=bird._id%>/comments/<%=comment._id%>/unupvoteComment"
            method="POST"
          >
            <button class="btn btn-sm btn-success">Unlike</button>
          </form>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</section>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const bird = <%- JSON.stringify(bird) %>
</script>

<script src="/javascripts/showPageMap.js"></script>

<script src="/javascripts/carousel"></script>
