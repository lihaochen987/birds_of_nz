<% layout('layouts/boilerplate')%>  

<div class="row">
  <h1 class="text-center">Edit Bird</h1>
  <div class="col-6 offset-3">
    <form
      action="/birds/<%=bird._id%>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="species" class="form-label">Species</label>
        <select
          class="form-control dropdown"
          name="bird[species]"
          id="species"
          required
        >
          <option value="<%=bird.species %>"><%= bird.species %></option>
          <% for (let i = 0; i < birdData.length; i++) { %>
          <option value="<%= birdData[i].name %> ">
            <%=birdData[i].name%>
          </option>
          <% } %>
        </select>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <select
          class="form-control dropdown"
          name="bird[location]"
          id="location"
          required
        >
          <option value="<%=bird.location %>"><%= bird.location %></option>
          <% for (let i = 0; i < locations.length; i++) { %>
          <option value="<%= locations[i] %> "><%=locations[i]%></option>
          <% } %>
        </select>
      </div>

      <script>
        $(document).ready(function () {
          $(".dropdown").select2();
        });
      </script>

      <div class="mb-3">
        <label for="image" class="form-label">Add Image(s)...</label>
        <input
          class="form-control"
          type="file"
          name="image"
          id="image"
          multiple
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="bird[description]"
          required
        >
        <%= bird.description%></textarea
        >
        <div class="valid-feedback">Looks Good!</div>
      </div>

      <div class="mb-3">
        <% bird.images.forEach(function(img,i) { %>
        <img
          src="<%= img.url %> "
          class="img-thumbnail"
          alt="Image of <%= bird.species %> "
        />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%= i %> "
            name="deleteImages[]"
            value="<%= img.filename %> "
          />
          <label for="image-<%= i %> ">Delete Image</label>
        </div>
        <% }) %>
      </div>

      <div class="mb-3">
        <button class="btn btn-info">Update Entry</button>
      </div>
    </form>
    <a href="/birds/<%= bird._id%>">Back To Birds</a>
  </div>
</div>
