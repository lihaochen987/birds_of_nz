<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">The New Bird On The Block</h1>
  <div class="col-6 offset-3">
    <form action="/birds" method="POST">
      <div class="mb-3">
        <label class="form-label" for="species">Species</label>
        <input
          class="form-control"
          type="text"
          id="species"
          name="bird[species]"
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="bird[location]"
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input class="form-control" type="text" id="image" name="bird[image]" />
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="bird[description]"
        ></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Release Bird</button>
      </div>
    </form>
    <a href="/birds">Back To Birds</a>
  </div>
</div>
